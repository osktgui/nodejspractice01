extends ../layout
block content
	h1 Request Group Rate
	form
		input(type="hidden" name="referrer")
		!= 'Name: '
		input#fieldName(type='text', name='name')
		br
		!= 'Group Size: '
		input(type='text', name='groupSize')
		br
		!= 'Email: '
		input(type='', name='email')
		br
		input(type='submit', value='Submit')
	script
		!= "$(document).ready(function(){$('input[name=\"referrer\"]').val(document.referrer);})"